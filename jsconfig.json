{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@actions/*": [
        "./src/actions/*"
      ],
      "@components/*": [
        "./src/components/*"
      ],
      "@reducers/*": [
        "./src/reducers/*"
      ],
      "@utils/*": [
        "./src/utils/*"
      ],
      "@validations/*": [
        "./src/validations/*"
      ],
      "@base/*": [
        "./public/*"
      ],
    }
  },
  "exclude": ["node_modules"]
}
