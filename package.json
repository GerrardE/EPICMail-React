{
  "name": "react-app",
  "version": "1.0.0",
  "description": "React.js Front-End for the EPIC-Mail app",
  "main": "app.js",
  "scripts": {
    "start:dev": "NODE_ENV=development webpack-dev-server --config webpack.config.js --open",
    "build": "NODE_ENV=production npm run clean && webpack --config webpack.config.js",
    "heroku-postbuild": "npm run build",
    "clean": "rm -rf dist",
    "test": "jest --coverage",
    "test:dev": "jest --coverage && rm -rf coverage",
    "coveralls": "jest --colors --coverage && cat ./coverage/lcov.info | coveralls",
    "test:watch": "jest --coverage --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GerrardE/EPICMail.git"
  },
  "keywords": [
    "React",
    "Redux",
    "JSX"
  ],
  "author": "Gerrard Ezeugwa",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/GerrardE/EPICMail/issues"
  },
  "homepage": "https://github.com/GerrardE/EPICMail#readme",
  "dependencies": {
    "@babel/core": "^7.4.5",
    "@babel/plugin-proposal-class-properties": "^7.4.4",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "axios": "^0.18.0",
    "babel-loader": "^8.0.6",
    "classnames": "^2.2.6",
    "css-loader": "^2.1.1",
    "dotenv-webpack": "^1.7.0",
    "file-loader": "^4.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jwt-decode": "^2.2.0",
    "path": "^0.12.7",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-redux": "^7.0.3",
    "react-router-dom": "^5.0.0",
    "redux": "^4.0.1",
    "redux-thunk": "^2.3.0",
    "style-loader": "^0.23.1",
    "webpack": "^4.32.2",
    "webpack-cli": "^3.3.2",
    "webpack-dev-server": "^3.4.1"
  },
  "devDependencies": {
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "enzyme-to-json": "^3.3.5",
    "jest": "^24.8.0",
    "redux-mock-store": "^1.5.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>__tests__/setup/enzyme_setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/__tests__/setup/"
    ],
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>__tests__/setup/assetsTransformer.js",
      "\\.(css|less)$": "<rootDir>__tests__/setup/assetsTransformer.js"
    },
    "engines": {
      "node": "10.3.0",
      "npm": "6.9.0"
    }
  }
}
